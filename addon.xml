<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.steam.menu" name="steam Menu Launcher" version="0.1.0" provider-name="3lpsy">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>linux</platform>
		<summary lang="en">Runs steam menu from Kodi.</summary>
		<description lang="en">Stops Kodi, starts steam in menu mode, and restarts Kodi when steam exits.</description>
		<license>GNU General Public License, v2</license>
		<language></language>
		<source>https://github.com/3lpsy/script.steam.menu</source>
		<website>https://steam.com</website>
		<assets>
			<icon>icon.png</icon>
			<fanart>steam-xmb.png</fanart>
			<screenshot>steam-xmb.png</screenshot>
		</assets>
		<news>Initial version</news>
	</extension>
</addon>
